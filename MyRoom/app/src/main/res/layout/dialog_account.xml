<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/background_white_cornor"
    android:orientation="vertical"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_login_dialog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/outline_group_black_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/username_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_title"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/type_user_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_user"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/bt_sign_in_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/bt_sign_out_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Sign out"
        tools:ignore="HardcodedText" />

</LinearLayout>