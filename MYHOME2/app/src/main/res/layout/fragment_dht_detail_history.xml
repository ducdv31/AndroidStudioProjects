<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".historyactivity.fragment.DhtDetailHistoryFragment">

    <TextView
        android:id="@+id/tv_date_in_detail_dht_history"
        style="@style/HeaderMedium25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Date"
        tools:ignore="HardcodedText" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sm_rv_detail_dht_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_date_history" />

            <include layout="@layout/shimmer_date_history" />

            <include layout="@layout/shimmer_date_history" />

            <include layout="@layout/shimmer_date_history" />

            <include layout="@layout/shimmer_date_history" />

            <include layout="@layout/shimmer_date_history" />

            <include layout="@layout/shimmer_date_history" />

            <include layout="@layout/shimmer_date_history" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detail_dht_history"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />

</LinearLayout>