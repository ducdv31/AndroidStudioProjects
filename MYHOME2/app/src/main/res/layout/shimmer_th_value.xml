<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_current_value"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/background_data_stroke"
    android:padding="8dp"
    android:layout_marginTop="10dp"
    tools:ignore="UselessParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/t_value"
        style="@style/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/split_t_h"
        android:text="$"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/split_t_h"
        style="@style/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:text="|"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/h_value"
        style="@style/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/split_t_h"
        android:text="$"
        tools:ignore="HardcodedText" />
</RelativeLayout>