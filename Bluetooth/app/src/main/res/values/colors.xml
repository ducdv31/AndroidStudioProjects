<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="gray">#CCCCCC</color>
    <color name="red">#FF0000</color>
    <color name="red_white">#FF5454</color>
    <color name="tab_unselected_text_color">#FFFFFFFF</color>
    <color name="tab_selected_text_color">#FF5454</color>

    <style name="MyHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/red_white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MySelectTV" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="RightButtonControl" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="LeftButtonControl" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="TopButtonControl" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="DownButtonControl" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>